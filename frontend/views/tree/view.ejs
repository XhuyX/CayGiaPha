<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Hệ Thống Quản Lý Gia Phả Online</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/toast.js"></script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fadeIn 0.3s ease-in; }
        .hover-lift {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="font-sans">
<div class="min-h-screen w-full bg-[#fefcff] relative">
    <!-- Dreamy Sky Pink Glow Background -->
    <div class="absolute inset-0 z-0" style="
        background-image: 
            radial-gradient(circle at 30% 70%, rgba(173, 216, 230, 0.35), transparent 60%),
            radial-gradient(circle at 70% 30%, rgba(255, 182, 193, 0.4), transparent 60%);
    "></div>
    
    <div class="relative z-10">
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-40 border-b border-gray-200">
        <div class="max-w-screen-xl mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-4">
                    <a href="/trees" class="text-blue-600 hover:text-blue-800 font-medium transition flex items-center">
                        <i class="fas fa-arrow-left mr-2"></i>Quay lại danh sách
                    </a>
                    <div class="h-px bg-gray-300 w-8"></div>
                    <span class="font-bold text-xl text-gray-800" id="currentTreeName">
                        <i class="fas fa-tree text-blue-600 mr-2"></i><%= tree.name %>
                    </span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2 text-gray-600">
                        <i class="fas fa-user-circle"></i>
                        <span>Xin chào, <strong><%= user.username %></strong>!</span>
                    </div>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="px-4 py-2 rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-all shadow-md hover:shadow-lg">
                            <i class="fas fa-sign-out-alt mr-2"></i>Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-screen-xl mx-auto py-8 px-4 fade-in">
        <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100">
            <div class="flex flex-wrap justify-between items-center mb-6 gap-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900" id="treeTitle">
                        <i class="fas fa-sitemap text-blue-600 mr-2"></i><%= tree.name %>
                    </h1>
                    <p class="text-sm text-gray-600 mt-2 flex items-center">
                        <% if (tree.origin) { %>
                            <i class="fas fa-map-marker-alt text-blue-500 mr-2"></i><%= tree.origin %>
                        <% } %>
                    </p>
                </div>
                <div class="flex gap-2 items-center flex-wrap">
                    <div class="flex items-center gap-2">
                        <input type="text" id="searchMemberInput" placeholder="Tìm kiếm thành viên..." 
                            class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-64 transition-all">
                        <button onclick="performSearch()" 
                            class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold transition-all shadow-md hover:shadow-lg">
                            <i class="fas fa-search mr-2"></i>Tìm
                        </button>
                    </div>
                    <button onclick="openAddMemberModal()" 
                        class="px-4 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 font-semibold transition-all shadow-md hover:shadow-lg">
                        <i class="fas fa-plus mr-2"></i>Thêm Thành Viên
                    </button>
                    <div class="text-sm text-gray-600 bg-blue-50 px-4 py-2 rounded-lg border border-blue-200 flex items-center">
                        <i class="fas fa-info-circle text-blue-500 mr-2"></i>Click phải để sửa/xóa
                    </div>
                </div>
            </div>
            <div id="tree" class="border-2 border-dashed border-gray-300 rounded-lg p-2 bg-gray-50 min-h-[600px]"></div>
        </div>
    </main>
</div>

<!-- Modal Thêm Thành Viên -->
<div id="addMemberModal" class="custom-modal">
    <div class="modal-content" style="max-width: 600px;">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-gray-900">
                <i class="fas fa-user-plus text-blue-600 mr-2"></i>Thêm Thành Viên Mới
            </h2>
            <button onclick="closeAddMemberModal()" class="text-gray-500 hover:text-gray-700 text-3xl transition">&times;</button>
        </div>
        
        <form id="addMemberForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-user text-blue-500 mr-2"></i>Họ và Tên *
                </label>
                <input type="text" id="memberName" required 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-venus-mars text-blue-500 mr-2"></i>Giới tính *
                </label>
                <select id="memberGender" required 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    <option value="male">Nam</option>
                    <option value="female">Nữ</option>
                </select>
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="fas fa-birthday-cake text-blue-500 mr-2"></i>Năm sinh
                    </label>
                    <input type="text" id="memberDob" placeholder="VD: 1990" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        <i class="fas fa-cross text-blue-500 mr-2"></i>Năm mất
                    </label>
                    <input type="text" id="memberDod" placeholder="VD: 2020" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-book text-blue-500 mr-2"></i>Tiểu sử
                </label>
                <textarea id="memberBio" rows="3" placeholder="Nhập tiểu sử, cuộc đời của thành viên..." 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"></textarea>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-heart text-blue-500 mr-2"></i>Tình trạng hôn nhân
                </label>
                <select id="memberMaritalStatus" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    <option value="single">Độc thân</option>
                    <option value="married">Đã kết hôn</option>
                </select>
            </div>
            
            <div id="spouseSelectDiv" class="hidden">
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-user-friends text-blue-500 mr-2"></i>Chọn Vợ/Chồng
                </label>
                <select id="memberSpouse" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                    <option value="">-- Chọn --</option>
                </select>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-male text-blue-500 mr-2"></i>Danh sách Bố
                </label>
                <div id="fatherList" class="space-y-2 mb-2"></div>
                <button type="button" onclick="addFatherRow()" 
                    class="px-3 py-1 text-sm bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition">
                    <i class="fas fa-plus mr-1"></i>Thêm Bố
                </button>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-female text-pink-500 mr-2"></i>Danh sách Mẹ
                </label>
                <div id="motherList" class="space-y-2 mb-2"></div>
                <button type="button" onclick="addMotherRow()" 
                    class="px-3 py-1 text-sm bg-pink-100 text-pink-700 rounded-lg hover:bg-pink-200 transition">
                    <i class="fas fa-plus mr-1"></i>Thêm Mẹ
                </button>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-image text-blue-500 mr-2"></i>URL Ảnh đại diện
                </label>
                <input type="text" id="memberImg" placeholder="https://..." 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
                <p class="text-xs text-gray-500 mt-1">Để trống sẽ dùng ảnh mặc định</p>
            </div>
            
            <div class="flex justify-end gap-3 pt-4">
                <button type="button" onclick="closeAddMemberModal()" 
                    class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-semibold">
                    Hủy
                </button>
                <button type="submit" 
                    class="px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all font-semibold shadow-lg hover:shadow-xl">
                    <i class="fas fa-check mr-2"></i>Thêm Thành Viên
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Kết quả Tìm kiếm -->
<div id="searchResultModal" class="custom-modal">
    <div class="modal-content" style="max-width: 500px;">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-gray-900">
                <i class="fas fa-search text-blue-600 mr-2"></i>Kết quả Tìm kiếm
            </h2>
            <button onclick="closeSearchResultModal()" class="text-gray-500 hover:text-gray-700 text-3xl transition">&times;</button>
        </div>
        <div id="searchResultContent" class="space-y-2 max-h-96 overflow-y-auto"></div>
        <div class="flex justify-end gap-3 pt-4">
            <button onclick="closeSearchResultModal()" 
                class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-semibold">
                Đóng
            </button>
        </div>
    </div>
</div>

<!-- Modal Chi tiết Thành viên -->
<div id="memberDetailModal" class="custom-modal">
    <div class="modal-content relative" style="max-width: 600px; max-height: 90vh; display: flex; flex-direction: column; overflow: hidden;">
        <!-- Background với Diagonal Cross Center Fade Grid -->
        <div class="absolute inset-0" style="
            background-image: 
                linear-gradient(45deg, transparent 49%, #e5e7eb 49%, #e5e7eb 51%, transparent 51%),
                linear-gradient(-45deg, transparent 49%, #e5e7eb 49%, #e5e7eb 51%, transparent 51%);
            background-size: 40px 40px;
            -webkit-mask-image: radial-gradient(ellipse 60% 60% at 50% 50%, #000 30%, transparent 70%);
            mask-image: radial-gradient(ellipse 60% 60% at 50% 50%, #000 30%, transparent 70%);
            pointer-events: none;
            z-index: 0;
        "></div>
        
        <div class="relative z-10 flex flex-col h-full">
            <div class="flex justify-between items-center mb-4 pb-4 border-b border-gray-200 flex-shrink-0">
                <h2 class="text-2xl font-bold text-gray-900">
                    <i class="fas fa-user text-blue-600 mr-2"></i>Thông tin Chi tiết
                </h2>
                <button onclick="closeMemberDetailModal()" class="text-gray-500 hover:text-gray-700 text-3xl transition hover:bg-gray-100 rounded-full w-8 h-8 flex items-center justify-center">&times;</button>
            </div>
            
            <div id="memberDetailContent" class="space-y-4 flex-1 overflow-y-auto"></div>
            
            <div class="flex justify-end gap-3 pt-4 border-t border-gray-200 flex-shrink-0 mt-4">
                <button onclick="closeMemberDetailModal()" 
                    class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-semibold">
                    Đóng
                </button>
                <button onclick="deleteCurrentMember()" 
                    class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition font-semibold shadow-md hover:shadow-lg">
                    <i class="fas fa-trash mr-2"></i>Xóa
                </button>
                <button onclick="editCurrentMember()" 
                    class="px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition font-semibold shadow-md hover:shadow-lg">
                    <i class="fas fa-edit mr-2"></i>Chỉnh sửa
                </button>
            </div>
        </div>
    </div>
</div>

<script src="/js/confirm-modal.js"></script>
<script src="/js/familytree-simple.js"></script>
<script src="/js/main.js"></script>
<script>
// Khởi tạo biến global nếu chưa có (để tránh conflict với main.js)
if (typeof currentTreeId === 'undefined') {
    var currentTreeId = null;
}
if (typeof familyTrees === 'undefined') {
    var familyTrees = [];
}
if (typeof currentUser === 'undefined') {
    var currentUser = null;
}

// Gán giá trị từ server (sau khi main.js đã load)
<% if (typeof user !== 'undefined' && user) { %>
currentUser = <%- JSON.stringify(user) %>;
<% } else { %>
currentUser = null;
<% } %>
<% if (typeof tree !== 'undefined' && tree) { %>
currentTreeId = <%= tree.id %>;
familyTrees = [<%- JSON.stringify(tree) %>];
<% } else { %>
currentTreeId = null;
familyTrees = [];
<% } %>


// Load tree data và render sau khi DOM và main.js đã load
document.addEventListener('DOMContentLoaded', function() {
    // Đợi một chút để đảm bảo main.js đã load xong
    setTimeout(function() {
        if (typeof loadFamilyTree === 'function') {
            loadFamilyTree(currentTreeId);
        } else {
            console.error('loadFamilyTree function not found. Make sure main.js is loaded.');
            // Thử lại sau 500ms
            setTimeout(function() {
                if (typeof loadFamilyTree === 'function') {
                    loadFamilyTree(currentTreeId);
                } else {
                    console.error('loadFamilyTree still not found after retry.');
                }
            }, 500);
        }
    }, 100);
});
</script>
</body>
</html>

