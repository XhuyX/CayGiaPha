<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Hệ Thống Quản Lý Gia Phả Online</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/toast.js"></script>
    <script src="/js/confirm-modal.js"></script>
    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .fade-in { animation: fadeIn 0.3s ease-in; }
        .hover-lift {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body class="font-sans">
<div class="min-h-screen w-full bg-[#fefcff] relative">
    <!-- Dreamy Sky Pink Glow Background -->
    <div class="absolute inset-0 z-0" style="
        background-image: 
            radial-gradient(circle at 30% 70%, rgba(173, 216, 230, 0.35), transparent 60%),
            radial-gradient(circle at 70% 30%, rgba(255, 182, 193, 0.4), transparent 60%);
    "></div>
    
    <div class="relative z-10">
    <!-- Navigation -->
    <nav class="bg-white shadow-md sticky top-0 z-40 border-b border-gray-200">
        <div class="max-w-screen-xl mx-auto px-4">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-3">
                    <div class="h-10 w-10 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center">
                        <i class="fas fa-tree text-white"></i>
                    </div>
                    <span class="font-bold text-xl text-gray-800">Gia Phả Online</span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="flex items-center space-x-2 text-gray-600">
                        <i class="fas fa-user-circle"></i>
                        <span>Xin chào, <strong><%= user.username %></strong>!</span>
                    </div>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="px-4 py-2 rounded-lg text-sm font-medium text-white bg-red-600 hover:bg-red-700 transition-all shadow-md hover:shadow-lg">
                            <i class="fas fa-sign-out-alt mr-2"></i>Đăng xuất
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-screen-xl mx-auto py-8 px-4">
        <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 fade-in">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <i class="fas fa-sitemap text-blue-600 mr-2"></i>Danh sách Cây Gia Phả
                    </h1>
                    <p class="text-gray-600 mt-1">Quản lý và xem các cây gia phả của bạn</p>
                </div>
                <button onclick="openCreateTreeModal()" 
                    class="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white rounded-lg hover:from-green-600 hover:to-emerald-700 font-semibold transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                    <i class="fas fa-plus mr-2"></i>Tạo Cây Gia Phả Mới
                </button>
            </div>

            <div id="treeListContainer" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <% if (trees && trees.length > 0) { %>
                    <% trees.forEach(tree => { %>
                        <div onclick="selectTree(<%= tree.id %>)" 
                            class="tree-card bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-md p-6 border-2 border-gray-200 hover:border-blue-400 transition-all cursor-pointer hover-lift">
                            <div class="flex justify-between items-start mb-4">
                                <div class="flex-1">
                                    <h3 class="text-xl font-bold text-gray-800 mb-2">
                                        <i class="fas fa-tree text-blue-600 mr-2"></i><%= tree.name %>
                                    </h3>
                                    <div class="space-y-2 text-sm text-gray-600">
                                        <% if (tree.origin) { %>
                                            <p class="flex items-center">
                                                <i class="fas fa-map-marker-alt text-blue-500 mr-2 w-4"></i>
                                                <span><%= tree.origin %></span>
                                            </p>
                                        <% } %>
                                        <% if (tree.branch) { %>
                                            <p class="flex items-center">
                                                <i class="fas fa-code-branch text-indigo-500 mr-2 w-4"></i>
                                                <span><%= tree.branch %></span>
                                            </p>
                                        <% } %>
                                    </div>
                                </div>
                                <button onclick="event.stopPropagation(); deleteTree(<%= tree.id %>)" 
                                    class="text-red-500 hover:text-red-700 transition p-2 hover:bg-red-50 rounded-lg">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                            <div class="mt-4 pt-4 border-t border-gray-200">
                                <p class="text-sm text-gray-500 flex items-center">
                                    <i class="fas fa-users text-gray-400 mr-2"></i>
                                    <strong class="text-gray-700"><%= tree.members ? tree.members.length : 0 %></strong> thành viên
                                </p>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div id="noTreesMessage" class="col-span-full text-center py-12">
                        <div class="mx-auto h-24 w-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                            <i class="fas fa-tree text-gray-400 text-4xl"></i>
                        </div>
                        <h3 class="text-xl font-medium text-gray-900 mb-2">Chưa có cây gia phả nào</h3>
                        <p class="text-gray-500 mb-6">Hãy tạo cây gia phả đầu tiên của bạn</p>
                        <button onclick="openCreateTreeModal()" 
                            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold transition-all shadow-lg hover:shadow-xl">
                            <i class="fas fa-plus mr-2"></i>Tạo Ngay
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</div>

<!-- Modal Tạo Cây Gia Phả -->
<div id="createTreeModal" class="custom-modal">
    <div class="modal-content">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-2xl font-bold text-gray-900">
                <i class="fas fa-tree text-blue-600 mr-2"></i>Tạo Cây Gia Phả Mới
            </h2>
            <button onclick="closeCreateTreeModal()" class="text-gray-500 hover:text-gray-700 text-3xl transition">&times;</button>
        </div>
        
        <form id="createTreeForm" class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-tag text-blue-500 mr-2"></i>Tên Gia Phả *
                </label>
                <input type="text" id="newTreeName" required placeholder="VD: Gia phả dòng họ Nguyễn" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-map-marker-alt text-blue-500 mr-2"></i>Nơi Bắt Nguồn
                </label>
                <input type="text" id="newTreeOrigin" placeholder="VD: Làng Mẹo, Thái Bình" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-code-branch text-blue-500 mr-2"></i>Tên Chi
                </label>
                <input type="text" id="newTreeBranch" placeholder="VD: Chi thứ hai" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all">
            </div>
            
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">
                    <i class="fas fa-file-alt text-blue-500 mr-2"></i>Ghi chú hoặc mô tả
                </label>
                <textarea id="newTreeDescription" rows="4" placeholder="Mô tả chi tiết về dòng họ..." 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"></textarea>
            </div>
            
            <div class="flex justify-end gap-3 pt-4">
                <button type="button" onclick="closeCreateTreeModal()" 
                    class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition font-semibold">
                    Hủy
                </button>
                <button type="submit" 
                    class="px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all font-semibold shadow-lg hover:shadow-xl">
                    <i class="fas fa-check mr-2"></i>Tạo Cây Gia Phả
                </button>
            </div>
        </form>
    </div>
</div>

<script>
// Khởi tạo biến global nếu chưa có (để tránh conflict với main.js)
if (typeof API_BASE === 'undefined') {
    var API_BASE = '/api';
}
if (typeof currentTreeId === 'undefined') {
    var currentTreeId = null;
}
if (typeof familyTrees === 'undefined') {
    var familyTrees = [];
}

// Gán giá trị từ server
familyTrees = <%- JSON.stringify(trees || []) %>;

// Khởi tạo currentUser từ server nếu chưa có
if (typeof currentUser === 'undefined' || !currentUser) {
    var currentUser = <%- JSON.stringify(user || null) %>;
}

function selectTree(treeId) {
    window.location.href = `/tree/${treeId}`;
}

function openCreateTreeModal() {
    document.getElementById('createTreeModal').classList.add('active');
    document.body.classList.add('modal-active');
    document.getElementById('createTreeForm').reset();
}

function closeCreateTreeModal() {
    document.getElementById('createTreeModal').classList.remove('active');
    document.body.classList.remove('modal-active');
}

async function deleteTree(treeId) {
    const confirmed = await showConfirm('Bạn có chắc chắn muốn xóa cây gia phả này không? Hành động này không thể hoàn tác!');
    if (!confirmed) {
        return;
    }
    
    try {
        const response = await fetch(`/api/family-trees/${treeId}`, {
            method: 'DELETE'
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Xóa tree khỏi array
            if (typeof familyTrees !== 'undefined') {
                familyTrees = familyTrees.filter(t => t.id !== treeId);
            }
            
            // Cập nhật UI động thay vì reload
            if (typeof renderTreeList === 'function') {
                // Nếu có hàm renderTreeList từ main.js, dùng nó
                await renderTreeList();
            } else {
                // Nếu không có, tự render lại
                await renderTreeListLocal();
            }
            
            if (typeof showToast !== 'undefined') {
                showToast('Đã xóa cây gia phả thành công!', 'success');
            }
        } else {
            if (typeof showToast !== 'undefined') {
                showToast('Xóa thất bại: ' + (data.message || 'Có lỗi xảy ra'), 'error');
            }
        }
    } catch (error) {
        console.error('Failed to delete tree:', error);
        if (typeof showToast !== 'undefined') {
            showToast('Lỗi xóa cây gia phả: ' + error.message, 'error');
        }
    }
}

// Hàm render danh sách tree local (fallback nếu main.js chưa load)
async function renderTreeListLocal() {
    const container = document.getElementById('treeListContainer');
    const noTreesMsg = document.getElementById('noTreesMessage');
    
    if (!container) return;
    
    // Reload trees từ server
    try {
        const userId = currentUser ? currentUser.id : (typeof user !== 'undefined' && user ? user.id : null);
        if (!userId) {
            console.error('Cannot reload trees: no userId');
            return;
        }
        
        const response = await fetch(`/api/family-trees/${userId}`);
        const result = await response.json();
        
        if (result.success && result.trees) {
            familyTrees = result.trees;
        }
    } catch (error) {
        console.error('Failed to reload trees:', error);
    }
    
    if (!familyTrees || familyTrees.length === 0) {
        container.innerHTML = '';
        if (noTreesMsg) {
            noTreesMsg.classList.remove('hidden');
        }
        return;
    }
    
    if (noTreesMsg) {
        noTreesMsg.classList.add('hidden');
    }
    
    // Render với format giống như trong EJS template
    container.innerHTML = familyTrees.map(tree => `
        <div onclick="selectTree(${tree.id})" 
            class="tree-card bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-md p-6 border-2 border-gray-200 hover:border-blue-400 transition-all cursor-pointer hover-lift">
            <div class="flex justify-between items-start mb-4">
                <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">
                        <i class="fas fa-tree text-blue-600 mr-2"></i>${tree.name || 'Chưa có tên'}
                    </h3>
                    <div class="space-y-2 text-sm text-gray-600">
                        ${tree.origin ? `
                            <p class="flex items-center">
                                <i class="fas fa-map-marker-alt text-blue-500 mr-2 w-4"></i>
                                <span>${tree.origin}</span>
                            </p>
                        ` : ''}
                        ${tree.branch ? `
                            <p class="flex items-center">
                                <i class="fas fa-code-branch text-indigo-500 mr-2 w-4"></i>
                                <span>${tree.branch}</span>
                            </p>
                        ` : ''}
                    </div>
                </div>
                <button onclick="event.stopPropagation(); deleteTree(${tree.id})" 
                    class="text-red-500 hover:text-red-700 transition p-2 hover:bg-red-50 rounded-lg">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-200">
                <p class="text-sm text-gray-500 flex items-center">
                    <i class="fas fa-users text-gray-400 mr-2"></i>
                    Số thành viên: <strong class="ml-1">${tree.members ? tree.members.length : 0}</strong>
                </p>
            </div>
        </div>
    `).join('');
}

// Event listener cho form tạo cây đã được xử lý trong main.js
// Không cần duplicate ở đây để tránh tạo 2 cây gia phả
</script>
<script src="/js/familytree-simple.js"></script>
<script src="/js/main.js"></script>
    </div>
</div>
</body>
</html>

